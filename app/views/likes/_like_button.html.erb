<% unless current_user.id == micropost.user_id %>
  <% if current_user.liked?(micropost)%>
    <%= form_for(current_user.likes.find_or_create_by(like_id: micropost.id), html: { method: :delete}) do |f|%>
      <%= hidden_field_tag :like_id, micropost.id%>
      <%= f.submit "お気に入り済み", class:"btn btn-danger"%>
    <% end %>
  <% else %>
    <%= form_for(current_user.likes.build) do |f|%>
      <%= hidden_field_tag :like_id, micropost.id%>
      <%= f.submit "お気に入り", class: "btn btn-primary"%>
    <% end %>
  <% end%>
<% end %>